[core]
    excludesfile = ~/.gitignore
    editor = vim -u NONE -i NONE -N -c 'syntax on'
    ; editor = vim
    autocrlf = input
[color]
    ui = auto
[log]
    date = iso
[alias]
    co = checkout
    ci = commit
    st = status -sb
    br = branch
    pr = pull --rebase
    fo = fetch origin
    ro = rebase origin
    #lg = log --graph --pretty=oneline --decorate --date=short --abbrev-commit --branches
    lg = log --graph --pretty='format:%C(yellow)%h%Creset %s %C(black bold)%an, %ar %ad%Cgreen%d%Creset'
    #lg = log --graph --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %C(blue)%an, %ar %ad%Creset'
    #lg = log --graph --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %an, %ar %ad'
    #hist = log --pretty=format:'%C(bold blue)%h%C(reset) %ad %C(bold green)|%C(reset) %s %C(bold white)[%an]%C(reset)%C(bold yellow)%d%C(reset)' --graph --date=short
    hist = log --pretty=format:'%C(bold blue)%h%C(reset) %ad %C(bold green)|%C(reset) %s %C(bold white)[%an]%C(reset)%C(bold yellow)%d%C(reset)' --graph
    tree = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    newly = log HEAD@{1}..HEAD --reverse
    newlyp = log HEAD@{1}..HEAD -p --reverse
    diff-cache = diff --cached
    info = remote show origin
    delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
    pull-dry-run = !"git fetch origin; B=$(git rev-parse --abbrev-ref HEAD); git diff --stat --summary ${B}..origin/${B}"
    fixup = commit --amend -C HEAD
#[merge]
#    ff = false
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
