"2.0 (created: 2009/03/28 23:48:07)
set guioptions=
set runtimepath=/Users/kshimo69/.vimperator

source! ~/.vimperatorrc.local

" vim: set ft=vimperator:
" ビジュアルベルを使用
set visualbell
" ビジュアルベルを無効化
highlight! Bell display: none;
" ヒントのスタイル
" highlight! Hint font-size: 10pt; background: blue; color: white; border: 1px solid white; font-family: "Bitstream Vera Sans Mono",monaco,monospace;
highlight! Hint font-size: 10pt; background: blue; color: white; border: 1px solid white; opacity:0.80
" その他色の設定
highlight! HintElem color:black; background:PowderBlue;
highlight! HintActive color:White; background:SteelBlue;
highlight! StatusLine color:#333333;
highlight! StatusLineSecure color:#333333;
highlight! Search background:PowderBlue;

" ページのアクセスキーを無効化
set! ui.key.generalAccessKey=0

:set nextpattern=^\次,^\続き,\bnext,^>$,^(>>\|??)$,^(>\|??),(>\|??),\bmore\b$
:set previouspattern=^\前,^\戻,\bprev|previous\b,^<$,^(<<\|??)$,^(<\|??),(<\|??)$

" Gmail/LDR/Fastladder/OpenFL/はてブでは新規タブをバックグラウンドで開く
autocmd LocationChange (?!https?://(mail\.google\.com\/(mail|a)\/|(reader\.livedoor\.com|fastladder\.com|0\.0\.0\.0\:3000)/reader/|b\.hatena\.ne\.jp/revivre)) :set! browser.tabs.loadDivertedInBackground=false
autocmd LocationChange https?://(mail\.google\.com\/(mail|a)\/|(reader\.livedoor\.com|fastladder\.com|0\.0\.0\.0\:3000)/reader/|b\.hatena\.ne\.jp/revivre) :set! browser.tabs.loadDivertedInBackground=true

" 常にタブを表示
set showtabline=2

" コマンド補完
set wildoptions=auto

" アドレス補完
set complete=lbsS

" リンクをバックグランドで開く
set! browser.tabs.loadDivertedInBackground=true

" 補完リストの選択をC-n,C-pで
cmap <C-n> <TAB>
cmap <C-p> <S-TAB>

" j, k を10倍に
map j 3<C-e>
map k 3<C-y>
" J, K でもスクロール
map J <C-e>
map K <C-y>

" ページロード時にテキストボックスにフォーカスするのを防ぐ
set focuscontent

" h/lで戻る/進む
noremap h <A-Left>
noremap l <A-Right>
" H/Lでタブ移動
noremap H gT
noremap L gt
" ←/→でタブ移動
map <Left> <C-p>
map <Right> <C-n>
" Shift+←/Shift+→でタブ位置変更
map <S-Right> :tabmove! +1<CR>
map <S-Left> :tabmove! -1<CR>

" Ctrl+rで再起動,Ctrl+hでヘルプ ,sで設定ファイル再読込
map <C-r> :restart<CR>
map ,s :so ~/.vimperatorrc<CR>

" 各種バー表示をトグル
noremap <C-1> :set guioptions=r<cr>
noremap <C-2> :set guioptions=Br<cr>
noremap <C-3> :set guioptions=BmTr<cr>
noremap <C-4> :set mainecoon=amc<cr>
noremap <C-5> :set mainecoon=am<cr>
noremap <C-6> :set mainecoon=m<cr>

" C-jで改行になるのを防ぐ
cmap <C-j> <Nop>
" C-cをOSと同じに
map <C-c> <ESC>
cmap <C-c> <ESC>

" plugins
" =========================================================
" char-hints-mod2.js
" migemo_hint.js
:set hintmatching=custom
" migemo-find.js
" direct_bookmark.js
let g:direct_sbm_use_services_by_tag = "hd"
let g:direct_sbm_use_services_by_post = "h"
let g:direct_sbm_is_normalize = "false"
let g:direct_sbm_is_use_migemo = "true"
map b :bentry<CR>
map B :sbm<Space>
map ,b :btags<CR>
" lookupDictionary.js
map e :eijiro<Space>
" hatena-bookmark-search.js
" feedSomeKeys_2.js
autocmd LocationChange .* :fmapc
"autocmd LocationChange 'mail\.google\.com/mail' :fmap -depth 4 c / j k n p o u e x s r a # [ ] z ? gi gs gt gd ga gc
autocmd LocationChange 'mail\.google\.com/mail' :fmap c / j k n p o u e x s r a # [ ] z ? gi gs gt gd ga gc
"autocmd LocationChange 'www\.google\.co\.jp/reader' :fmap! -vkey j k n p m s t v A r S N P X O gh ga gs gt gu u / ?
autocmd LocationChange 'www\.google\.co\.jp/reader' :fmap! -vkey j k n p m s v A r S N P X O gh ga gs gt gu u / ?
autocmd LocationChange 'www\.google\.com/calendar/' :fmap! -vkey -event keydown t a d w m x c e <Del> / + q s ?
autocmd LocationChange 'b\.hatena\.ne\.jp/your_hatena_id' :fmap! -vkey j k o e b
autocmd LocationChange 'www\.rememberthemilk\.com/' :fmap! -vkey t c p r d s 1 2 3 4 a n i k j K J z <Tab> <Delete> <C-g> ?
" migemized-find.js
let g:migemized_find_install = "false"
" google-search.js
" twitter.js
map ,t :twitter<Space>
